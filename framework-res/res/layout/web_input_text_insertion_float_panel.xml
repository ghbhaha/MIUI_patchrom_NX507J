<?xml version="1.0" encoding="utf-8"?>
<android.widget.FloatPanelView android:layout_width="wrap_content" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@id/panel" android:background="@drawable/textview_panel_bg" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:id="@id/buttonSelect" android:background="@drawable/textview_floatpanel_left_corner_button_bg" android:text="@string/select" style="@style/TextViewFloatPanelButton" />
        <ImageView android:id="@id/separator1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/textview_panel_separator" />
        <TextView android:id="@id/buttonSelectAll" android:background="@drawable/textview_floatpanel_middle_no_corner_button_bg" android:text="@string/selectAll" style="@style/TextViewFloatPanelButton" />
        <ImageView android:id="@id/separator2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/textview_panel_separator" />
        <TextView android:id="@id/buttonPaste" android:background="@drawable/textview_floatpanel_right_corner_button_bg" android:text="@string/paste" style="@style/TextViewFloatPanelButton" />
    </LinearLayout>
    <ImageView android:id="@id/arrow_up" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/textview_panel_arrow_up" />
    <ImageView android:id="@id/arrow_down" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/textview_panel_arrow_down" />
</android.widget.FloatPanelView>